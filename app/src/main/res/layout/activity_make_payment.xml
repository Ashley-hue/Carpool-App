<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePayment"
    android:background="@drawable/makep">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5F000000">

        <TextView
            android:id="@+id/destinatory"
            android:text="Destination: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/arriving"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_bg"
            android:hint="Destination"
            android:textColor="@color/white"
            android:minWidth="48dp"
            android:padding="10dp"
            android:textColorHint="#4E342E" />

        <TextView
            android:id="@+id/timatory"
            android:text="Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/destinatory"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/timeofArrive"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_below="@+id/arriving"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_bg"
            android:hint="time"
            android:textColor="@color/white"
            android:minWidth="32dp"
            android:padding="10dp"
            android:textColorHint="#4E342E"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/pricatory"
            android:text="Price: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/timatory"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/priceRide"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_below="@+id/timeofArrive"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_bg"
            android:hint="price"
            android:textColor="@color/white"
            android:minWidth="32dp"
            android:padding="10dp"
            android:textColorHint="#4E342E"
            tools:ignore="TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/payTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:textStyle="italic"
            android:background="@drawable/btn_bg"
            android:layout_below="@+id/priceRide"
            android:layout_marginTop="90dp"
            android:layout_marginStart="150dp"/>

    </RelativeLayout>

</RelativeLayout>